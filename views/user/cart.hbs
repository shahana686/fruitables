     <script>
  // üîÅ Update subtotal, shipping, discount, and total

  function updateCartTotals() {
    let subtotal = 0;

    document.querySelectorAll('tr[id^="cart-item-"]').forEach(row => {
      const price = parseFloat(row.dataset.price);
      const qty = parseInt(row.querySelector('.quantity-value').textContent);
      subtotal += price * qty;
    });

    
     const shipping = subtotal === 0 ? 0 : 3;
    const discount = parseFloat(document.getElementById('discount')?.textContent.replace(/[^\d]/g, '') || 0);
    const total = subtotal + shipping - discount;

  
  // ‚úÖ Update UI values
  document.getElementById('subtotal').textContent = `‚Çπ${subtotal}`;
  document.getElementById('shipping').textContent = `Flat rate: ‚Çπ${shipping}`;
  document.getElementById('total').textContent = `‚Çπ${total}`;
}
  

  // ‚ûï‚ûñ Change Quantity AJAX

async function changeQuantity(productId, type) {
  try {
    const row = document.getElementById(`cart-item-${productId}`);
    const qtySpan = row.querySelector('.quantity-value');
    let qty = parseInt(qtySpan.textContent);

    if (type === 'decrease' && qty === 1) {
      // üü° Alert before removing item
      const result = await Swal.fire({
        title: 'Remove item?',
        text: 'Quantity is 1. Do you want to remove this item from your cart?',
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#d33',
        cancelButtonColor: '#3085d6',
        confirmButtonText: 'Yes, remove it!',
      });

      if (result.isConfirmed) {
        await removeFromCart(productId, null);
        Swal.fire('Removed!', 'Item has been removed from cart.', 'success');
      }

      return; // ‚õî Stop here; no further processing
    }

    // üîÑ Proceed with normal AJAX quantity update
    const res = await fetch(`/user/${type}-quantity/${productId}`, { method: 'POST' });

    if (res.ok) {
      qty = type === 'increase' ? qty + 1 : qty - 1;
      qtySpan.textContent = qty;

      // üî¢ Update item total price if exists
      const price = parseFloat(row.dataset.price);
      const itemTotalElement = row.querySelector('.item-total');
      if (itemTotalElement) {
        itemTotalElement.textContent = `‚Çπ${price * qty}`;
      }

      updateCartTotals();
    } else {
      alert('Failed to update quantity');
    }
  } catch (error) {
    console.error(error);
    alert('Error updating quantity');
  }
}

  // ‚úñ Remove item from cart via AJAX
  async function removeFromCart(productId, formElement) {
    try {
      const res = await fetch(`/user/remove-from-cart/${productId}`, { method: 'POST' });

      if (res.ok) {
        const row = document.getElementById(`cart-item-${productId}`);
        if (row) row.remove();
        updateCartTotals();
      } else {
        alert('Failed to remove item');
      }
    } catch (error) {
      console.error(error);
      alert('Error removing item');
    }
  }

  // üîó Attach event listeners
  document.addEventListener('DOMContentLoaded', () => {
    // Increase buttons
    document.querySelectorAll('.increase-btn').forEach(btn => {
      btn.addEventListener('click', () => {
        const id = btn.dataset.id;
        changeQuantity(id, 'increase');
      });
    });

    // Decrease buttons
    document.querySelectorAll('.decrease-btn').forEach(btn => {
      btn.addEventListener('click', () => {
        const id = btn.dataset.id;
        changeQuantity(id, 'decrease');
      });
    });

    // ‚úÖ SweetAlert + AJAX Remove
    document.querySelectorAll('.remove-cart-form').forEach(form => {
      form.addEventListener('submit', async (e) => {
        e.preventDefault(); // Stop default form submission
