<body>
    <h2>Add Coupon</h2>
<form method="POST" action="/admin/coupons/add">
  <input name="code" placeholder="Coupon Code" required>
  <input name="discount" type="number" placeholder="Discount" required>
  <input name="expiryDate" type="date" required>
  <input name="minPurchase" type="number" placeholder="Minimum Purchase">
  <input name="usageLimit" type="number" placeholder="Usage Limit" value="1">
  <button type="submit">Add</button>
</form>

</body>
</html>